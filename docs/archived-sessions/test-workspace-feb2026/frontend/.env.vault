# Environment Variable Vault Configuration
# This file manages environment variables across different environments
# Use 'npm run env:pull <environment>' to fetch configs

VAULT_VERSION=1.0.0

[development]
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
DATABASE_PATH=./data
LOG_LEVEL=debug
ENABLE_DEBUG=true

[staging]
NODE_ENV=staging
NEXT_PUBLIC_API_URL=https://staging.veritablegames.com
DATABASE_PATH=/data
LOG_LEVEL=info
ENABLE_DEBUG=false
CDN_URL=https://cdn-staging.veritablegames.com
SENTRY_DSN=@vault:staging:SENTRY_DSN
REDIS_URL=redis://redis:6379

[production]
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.veritablegames.com
DATABASE_PATH=/data
LOG_LEVEL=warn
ENABLE_DEBUG=false
CDN_URL=https://cdn.veritablegames.com
CLOUDFLARE_CDN_DOMAIN=veritablegames.b-cdn.net
CLOUDFLARE_IMAGES=true
SENTRY_DSN=@vault:production:SENTRY_DSN
REDIS_URL=@vault:production:REDIS_URL
AWS_ACCESS_KEY_ID=@vault:production:AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=@vault:production:AWS_SECRET_ACCESS_KEY
S3_BUCKET=veritablegames-backups

[secrets]
# Secrets are stored encrypted and referenced with @vault syntax
# These should never be committed to git
SESSION_SECRET=@vault:all:SESSION_SECRET
CSRF_SECRET=@vault:all:CSRF_SECRET
ENCRYPTION_KEY=@vault:all:ENCRYPTION_KEY
BACKUP_ENCRYPTION_KEY=@vault:all:BACKUP_ENCRYPTION_KEY