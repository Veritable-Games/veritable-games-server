# Production Environment Variables
# Copy to .env.production or set in Coolify/deployment platform

# WebSocket URL for real-time workspace collaboration
NEXT_PUBLIC_WS_URL=wss://ws.veritablegames.com

# Enable workspace WebSocket features
NEXT_PUBLIC_WORKSPACE_WEBSOCKET_ENABLED=true

# WebSocket server port (internal)
WS_PORT=3002

# Database connection (production)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/veritable_games
DATABASE_MODE=production
